<div class="row">
    <div class="col-sm-5">
        <h1>Hi @ViewBag.name!</h1>
    </div>
    <div class="col-sm-5"></div>
    <div class="col-sm-1">
        <a href="/users/logoff">Log out</a>
    </div>

</div>
@model CSharp_belt_exam_project_two.Models.IdeaVal
<div class="row">
    <div class="col-sm-1"></div>
    <form class="" asp-controller="Idea" asp-action="CreateIdea" method="post">
        <div class="col-sm-9">
            <textarea asp-for="content" cols="60" rows="1"></textarea>
            <button type="submit" class="btn btn-default">Idea!</button>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <span asp-validation-for="content" class="error"></span>
    </div>
</div>

@{
    foreach(var idea in ViewBag.allIdeas) {

        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-6">
                <a href="/users/@idea.user.userid">@idea.user.alias</a>
                says:
                <textarea name="" id="" cols="60" rows="5">@idea.content</textarea>
                
            </div>
            <div class="col-sm-4">
                @if( @idea.user.userid == @ViewBag.user_id) {
                    <form action="/bright_ideas/@idea.ideaid/delete" method="post">
                        <button type="submit" class="btn-default">X</button>
                    </form>
                }
            </div>  
        </div>

        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-1">
                <form action="/bright_ideas/@idea.ideaid" method="post">
                    <button type="submit" class="btn-link">Like</button>
                </form>
            </div>
            <div class="col-sm-8">
                <a href="/bright_ideas/@idea.ideaid">@idea.likes.Count people</a> like this. *You can only like once!

            </div>   
        </div>
    } 
}